<div class="users-form">
  <div class="well">
    <h2><%= I18n.t("sign_in.title") %></h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, label:I18n.t("sign_in.email") %>
        <%= f.input :password, required: false, label:I18n.t("sign_in.password") %>
        <%= f.input :remember_me, as: :boolean, label:I18n.t("sign_in.remember_me") if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, I18n.t("sign_in.title") %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
